{% set pageLinks = craft.entries.section('pages').showInNavigation(true).level(1).all() %}
{% set pageLinks = pageLinks|merge(craft.entries.section(['contact', 'donate']).all()) %}

<footer class="mt-16 bg-grey-10">
    <div class="container py-16">
        <div class="row -mb-8">
            <div class="col md:w-1/3 mb-8">
                {% if pageLinks %}
                    <h5 class="mb-4 font-bold text-sm uppercase tracking-wide text-grey-40">{{ siteName }}</h5>

                    {% for link in pageLinks %}
                        <div{% if not loop.last %} class="mb-2"{% endif %}>
                            <a class="text-grey-60 hover:text-grey-40" href="{{ link.url }}">{{ link.title }}</a>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="col md:w-2/3 mb-8 flex flex-col md:text-right">
                <div class="mb-8">
                    <h5 class="mb-4 font-bold text-sm uppercase tracking-wide text-grey-40">{{ 'Join our mailing list'|t }}</h5>

                    {% include "_includes/mailing-list-form" %}
                </div>

                {% if (footerContent.facebookUrl or footerContent.instagramUrl or footerContent.twitterUrl) %}
                    <div>
                        <h5 class="mb-4 font-bold text-sm uppercase tracking-wide text-grey-40">{{ 'Follow us'|t }}</h5>

                        <div class="flex md:justify-end -mx-1">
                            {% if footerContent.facebookUrl %}
                                <a class="btn btn-grey-20 flex items-center justify-center w-12 h-12 mx-1 p-0" href="{{ footerContent.facebookUrl }}">
                                    {% include "_includes/icons/facebook.svg" with { 'class': 'w-4 h-4' } only %}
                                </a>
                            {% endif %}

                            {% if footerContent.instagramUrl %}
                                <a class="btn btn-grey-20 flex items-center justify-center w-12 h-12 mx-1 p-0" href="{{ footerContent.instagramUrl }}">
                                    {% include "_includes/icons/instagram.svg" with { 'class': 'w-5 h-5' } only %}
                                </a>
                            {% endif %}

                            {% if footerContent.twitterUrl %}
                                <a class="btn btn-grey-20 flex items-center justify-center w-12 h-12 mx-1 p-0" href="{{ footerContent.twitterUrl }}">
                                    {% include "_includes/icons/twitter.svg" with { 'class': 'w-4 h-4' } only %}
                                </a>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            </div>
        </div>
    </div>

    {% if footerContent.copyrightNotice or footerContent.registeredCharityNotice %}
        <div class="text-sm bg-grey-20">
            <div class="container py-8">
                <div class="row">
                    <div class="col md:w-1/2">
                        {% if footerContent.copyrightNotice %}
                            <p class="text-grey-60">{{ footerContent.copyrightNotice|replace('{year}', now|date('Y')) }}</p>
                        {% endif %}
                    </div>
                    <div class="col md:w-1/2 md:text-right">
                        {% if footerContent.registeredCharityNotice %}
                            <p class="text-grey-60">{{ footerContent.registeredCharityNotice }}</p>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
</footer>
